<%- include('header') %>
        <h2><%= typeof book === 'undefined' ? 'New book' : 'Edit' %></h2>
        <form method="POST">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="title" name="title" placeholder=" " value="<%= typeof book === 'undefined' ? '' : book.title %>">
            <label for="title">Title</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="author" name="author" placeholder=" " value="<%= typeof book === 'undefined' ? '' : book.author %>">
            <label for="author">Author</label>
          </div>
          <div class="d-flex gap-2">
            <input type="submit" class="btn btn-primary flex-fill" value="Save"/>
            <a class="btn btn-warning flex-fill" href="/">Cancel</a>
          </div>
        </form>
        <%- include('footer') %>    
