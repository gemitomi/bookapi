<%- include('header') %>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Author</th>
              <th scope="col">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
          <% books.forEach( item => { %>
            <tr>
              <td><%= item.title %></td>
              <td><%= item.author %></td>
              <td>
                <a href="/editbook/<%= item.id %>" class="btn btn-primary btn-sm">Edit</a>
                <a href="/deletebook/<%= item.id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% }) %>
          </tbody>
        </table>
          <div class="form-floating flex-fill mb-2">
            <input type="text" class="form-control form-control-sm" id="s" name="s" placeholder=" "/>
            <label for="s">Search</label>
          </div>
        <a class="btn btn-primary" href="/newbook">New book</a>
<%- include('footer') %>
